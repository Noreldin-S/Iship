<!-- Start of Dashboard -->
<!-- First Card -->
<div class="container">
    <div class="row">
        <div class="col-lg-5">
            <div class="card text-center">
                <div class="card-header">Submit Forum</div>
                <div class="card-body">
                    <h5 class="card-title">Information</h5>
                    <p class="card-text">
                    <form>
                        <div class="mb-3">
                            <label for="recipientName" class="form-label">Name of Recipient</label>
                            <input type="text" class="form-control" id="recipientName" aria-describedby="emailHelp" placeholder="John Doe">
                        </div>
                        <div class="mb-3">
                            <label for="shippingAddress" class="form-label">Shipping Address</label>
                            <input type="text" class="form-control" id="shippingAddress" placeholder="123 Sunshine ST, New York NY, 00000">
                        </div>
                        <div class="mb-3">
                            <label for="packageWeight" class="form-label">Package Weight[lbs]</label>
                            <input type="text" class="form-control" id="packageWeight" placeholder="00">
                        </div>
                        <div class="mb-3">
                            <label for="packageDimensions" class="form-label">Package Dimensions</label>
                            <input type="text" class="form-control" id="packageDimensions" placeholder="00 x 00 x 00">
                        </div>
                        {{!-- <button type="submit" class="btn btn-primary">Submit</button> --}}
                        <input type="button" class="btn btn-primary" value="Submit"
                            onclick="location.href='/example';" />
                    </form>
                    </p>
                </div>
            </div>
        </div>
        <!-- Second Card -->
        <div class="col-lg-7">
            <div class="card text-center">
                <div class="card-header">Shipping Rates</div>
                <div class="card-body">
                    <h5 class="card-title">Tools</h5>
                    <p class="card-text-1">
                        Shipping Rates Return Here
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>